<CountryCityInput>:
    orientation: "vertical"
    size_hint: None, None
    size: "750dp", "105dp"
    spacing: "4dp"
    BoxLayout:
        size_hint_y: None
        height: "30dp"
        spacing: "4dp"
        pos_hint: {"center_x": 0.5}
        Label:
            text: "Country:"
            size_hint: None, None
            size: "60dp", "30dp"
            pos_hint: {"center_y": 0.5}
        TextInput:
            id: country_name
            hint_text: "Country"
            on_text: root.on_text(self.text)
            multiline: False
            size_hint: 1, None
            height: "30dp"
            pos_hint: {"center_y": 0.5}
        Label:
            text: "City:"
            size_hint: None, None
            size: "60dp", "30dp"
            pos_hint: {"center_y": 0.5}
        TextInput:
            id: city_name
            hint_text: "City"
            multiline: False
            size_hint: 1, None
            height: "30dp"
            pos_hint: {"center_y": 0.5}
        Button:
            text: "GO!"
            size_hint: None, None
            width: "60dp"
            height: "30dp"
            pos_hint: {"center_y": 0.5}
            on_release: root.on_go_button_pressed()
    ScrollView:
        size_hint: (1, None)
        height: "70dp"
        pos_hint: {"center_x": 0.5, "top": 1}  # Align to top

        GridLayout:
            orientation: "tb-lr"
            id: results_layout
            cols:1
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 40
            row_force_default: True
